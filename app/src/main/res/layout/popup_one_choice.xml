<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_alert_background"
    android:clipChildren="true"
    android:clipToPadding="true">

    <TextView
        android:id="@+id/popupOneChoiceTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/lta_blue"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/popupOneChoiceInfoTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popupOneChoiceInfoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:maxLines="7"
        android:minLines="1"
        android:paddingBottom="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/lta_blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/popupOneChoiceOkButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/popupOneChoiceCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        android:text="Avbryt"
        android:textAllCaps="false"
        android:textColor="@color/lta_blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/popupOneChoiceOkButton"
        app:layout_constraintEnd_toStartOf="@+id/popupOneChoiceOkButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/popupOneChoiceOkButton" />

    <Button
        android:id="@+id/popupOneChoiceOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        android:text="Logga ut"
        android:textAllCaps="false"
        android:textColor="@color/lta_blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/popupOneChoiceCancelButton" />


</androidx.constraintlayout.widget.ConstraintLayout>