<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/lta_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/overviewFillBlankTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/overviewFillBlankIcon"
        app:layout_constraintTop_toBottomOf="@+id/overviewFillBlankChoicesLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/overviewFillBlankTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="10"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/lta_text"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/overviewFillBlankIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/overviewFillBlankIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/overviewFillBlankTextView"
        app:srcCompat="@drawable/lta_icon_blank_light" />

    <LinearLayout
        android:id="@+id/overviewFillBlankChoicesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/overviewFillBlankTextView"
        app:layout_constraintTop_toBottomOf="@+id/overviewFillBlankTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>